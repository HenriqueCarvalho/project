- @posts.each do |post|
	.post
		.post-avatar
			.round-avatar
				= image_tag(post.user.avatar.url(:thumb))

		.post-content
			%h2.title= link_to post.title, post
			%p.content= post.content
			%p.information
				Number of comments:
				= post.comments.count
			%p.information
				Published at
				= time_ago_in_words(post.created_at)
				by
				= post.user.name