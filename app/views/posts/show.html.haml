#post_content
	%h1= @post.title
	%p= @post.content

	= if current_user and current_user.posts.include?(@post)
		= link_to "Edit", edit_post_path(@post), class: "button"
		= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure you want to do this?" }, class: "button"

	= link_to "upvote", like_post_path(@post), method: :put
	= @post.get_upvotes.size
	= link_to "downvote", dislike_post_path(@post), method: :put
	= @post.get_downvotes.size
		
	#comments
		%h2
			= @post.comments.count
			Comments
		%hr/
		%br/

		= render @post.comments

		%h3 Reply to thread
		= render "comments/form"
